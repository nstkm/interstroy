					input.choose__left-cost-input.choose__left-area-input(type="text" id="maxCost" value="100000")
					span.span__input тыс.руб
				div(id="slider_two")
				a(href='#').choose__left-btn Смотреть все проекты
				.choose__left-reset--wrap
					input.choose__left-reset(id='reset' type='reset' value="Сбросить фильтр")
